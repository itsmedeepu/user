<body>
    <div class="container fluid">
        <table class="table col-lg-10 table-bordered mt-5 shadow-lg">
            <thead>
                <tr>
                    <th>SI.NO</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Action</th>

                </tr>

            </thead>
            <tbody>
                <% if(data.length){
 
                    for(var i = 0; i< data.length; i++) {%>  
                    <tr>
                      <th scope="row"><%= (i+1) %></th>
                      <td><%= data[i].name%></td>
                      <td><%= data[i].email%></td>
                      <td><%= data[i].status%></td>
                      <td><button type="button" onclick="upd('<%=data[i].id%>')" class="btn btn-success">Update</button>  <button type="button" class="btn btn-danger" onclick="del('<%=data[i].id%>')" >Delete</button></td>
                    </tr>
                    <% }
                             
                     }else{ %>
                         <tr>
                            <td colspan="3">No user</td>
                         </tr>
                      <% } %>  
            </tbody>

        </table>
    </div>


